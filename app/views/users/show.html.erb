<div class='col-md-7'>
  <div class="text-center">
    <h1>My Wikis</h1>
    <p>Role - <%= current_user.role.titleize %></p>
    
    <% if current_user.standard? %> 
      <p><%= link_to "Upgrade Account", new_charge_path, class: 'btn btn-default shadow' %><p>
    <% end %>

    <% if current_user.premium? %>
      <p><%= link_to "Downgrade Account", charge_path, method: :delete, class: 'btn btn-danger', data: {confirm: 'If you downgrade your account your private wikis will become public.  Are you sure you want to downgrade your account?'} %>
    <% end %>
    <br>
    <br>

  </div>
    <table class="table">
      <tr>
        <th>Wiki Title</th>
        <th>Edit Wiki</th>
        <% if current_user.admin? %>
          <th>Delete Wiki</th>
        <% end %>
      </tr>
      <% current_user.wikis.each do |wiki| %>
      <tr>
        <td><%= link_to wiki.title, wiki %></td>
        <td><%= link_to "Edit", edit_wiki_path %></td>
        <if current_user.admin? %>
          <td><%= link_to "Delete", @wiki, method: :delete, data: {confirm: 'Are you sure you want to delete this wiki?'} %></td>
      <tr>
        <% end %>
    </table>
    <br>
    <br>
    <br>
</div>

<div class='col-md-2'>
  <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-default' %>
  <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
</div>


