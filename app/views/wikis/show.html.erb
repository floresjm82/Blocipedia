<div class="row">

  <div class="col-md-3">
    <p><%= link_to "Blocipedia", wikis_path %></p>
    <p><%= link_to "My Wikis", user_path(current_user) %></p>
    <p>About Blocipedia</p>
    <p>Help</p>
    <p>Contact Page</p>
  </div>


  <div class="col-md-7">
	<div class="text-center">
		<h1><%= @wiki.title %></h1>
		<h4><%= @wiki.body %></h4>
	</div>
  </div>

  <% if user_signed_in? %>
    <div class="col-md-2">
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-default' %>
      <%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-default' %>
    </div>
  <% end %>

</div>


